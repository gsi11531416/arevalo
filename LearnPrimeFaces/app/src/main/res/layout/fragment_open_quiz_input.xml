<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txv_resultado_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Puntaje" />

    <TextView
        android:id="@+id/txv_resultado_intento_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Intento" />

    <Button
        android:id="@+id/btn_open_quiz_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HacerQuiz" />

    <Button
        android:id="@+id/btn_ver_resultado_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver REsultado" />
</LinearLayout>