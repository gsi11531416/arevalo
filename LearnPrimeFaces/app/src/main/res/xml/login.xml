<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="Login">

        <EditTextPreference
            android:key="usuario"
            android:summary="Nombre de Usuario"
            android:title="Nombre de Usuario"
            android:enabled="true"
            android:editable="true"
            />
       </PreferenceCategory>

    <PreferenceCategory
        android:title="Email">
        <EditTextPreference
            android:key="email"
            android:title="Introduce tu Correo Electronico"
            android:summary="Email"
            android:enabled="true"
            android:editable="true"/>
    </PreferenceCategory>

    <Preference
        android:key="@string/login"
        android:title="@string/logintitle"
        android:summary="Iniciar Sesion"
       />
</PreferenceScreen>